    <div id="hearts-container"></div>
    <div class="glass-card">
        <h1>Happy Birthday, [Name]! ‚ù§Ô∏è</h1>
        <p id="typewriter"></p>
        <button class="btn-surprise" onclick="startSurprise()">Click for a Surprise! ‚ú®</button>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.5.1/dist/confetti.browser.min.js"></script>
    <script>
        // Typewriter Effect
        const text = "You are the best thing that ever happened to me. Every moment with you is a gift... [Add your text]";
        let i = 0;
        function type() { if(i < text.length) { document.getElementById("typewriter").innerHTML += text.charAt(i); i++; setTimeout(type, 50); } }
        window.onload = type;

        // Floating Hearts Logic
        function createHeart() {
            const heart = document.createElement('div');
            heart.classList.add('heart');
            heart.style.left = Math.random() * 100 + "vw";
            heart.style.animationDuration = Math.random() * 3 + 3 + "s";
            heart.innerText = "‚ù§Ô∏è";
            document.body.appendChild(heart);
            setTimeout(() => heart.remove(), 6000);
        }
        setInterval(createHeart, 300);

        function startSurprise() {
            confetti({ particleCount: 150, spread: 70, origin: { y: 0.6 } });
            alert("I love you more than words can say! Check your gift box next! üéÅ");
        }
    </script>
</body>
